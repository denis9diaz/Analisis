<div
  class="flex items-start justify-center min-h-screen bg-gray-100 pt-20 px-4"
>
  <div class="w-full max-w-xl bg-white p-8 rounded-2xl shadow-xl">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">
      Contáctanos
    </h2>
    <!-- PÁRRAFO INTRODUCTORIO: al principio visible -->
    <div id="intro-text">
      <p class="text-center text-gray-600 mb-6 text-sm">
        ¿Tienes alguna duda, sugerencia o problema? Selecciona el motivo y
        envíanos un mensaje.
      </p>
    </div>

    <!-- ✅ PASO 1: Selector de asunto -->
    <div id="asunto-selector" class="space-y-3 mb-6">
      <h3 class="text-md font-medium text-gray-700 mb-2">
        ¿Sobre qué trata tu mensaje?
      </h3>
      <div class="grid gap-3">
        <button
          type="button"
          data-asunto="Información incorrecta"
          class="asunto-btn w-full text-left px-4 py-3 bg-gray-100 hover:bg-gray-200 rounded-lg shadow-sm"
        >
          <strong class="text-gray-600">Información incorrecta</strong><br
          /><span class="text-sm text-gray-600"
            >Errores en partidos, estadísticas, etc.</span
          >
        </button>
        <button
          type="button"
          data-asunto="Problema técnico"
          class="asunto-btn w-full text-left px-4 py-3 bg-gray-100 hover:bg-gray-200 rounded-lg shadow-sm"
        >
          <strong class="text-gray-600">Problema técnico</strong><br /><span
            class="text-sm text-gray-600"
            >Fallas en la web o funcionalidades</span
          >
        </button>
        <button
          type="button"
          data-asunto="Sugerencia o mejora"
          class="asunto-btn w-full text-left px-4 py-3 bg-gray-100 hover:bg-gray-200 rounded-lg shadow-sm"
        >
          <strong class="text-gray-600">Sugerencia o mejora</strong><br /><span
            class="text-sm text-gray-600"
            >Ideas o comentarios sobre el proyecto</span
          >
        </button>
      </div>
    </div>

    <!-- ✅ PASO 2: Formulario de contacto (inicialmente oculto) -->
    <form id="contact-form" class="space-y-5 hidden">
      <!-- Subtítulo del asunto elegido -->
      <p id="asunto-texto" class="text-sm text-gray-600 italic"></p>
      <input type="hidden" id="asunto" />

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1" for="nombre"
          >Nombre</label
        >
        <input
          type="text"
          id="nombre"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-gray-700"
          placeholder="Tu nombre"
          required
        />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1" for="email"
          >Correo electrónico</label
        >
        <input
          type="email"
          id="email"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-gray-700"
          placeholder="tu@email.com"
          required
        />
      </div>

      <div>
        <label
          class="block text-sm font-medium text-gray-700 mb-1"
          for="mensaje">Mensaje</label
        >
        <textarea
          id="mensaje"
          rows="5"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-gray-700"
          placeholder="Escribe tu mensaje aquí..."
          required></textarea>
      </div>

      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded-lg font-semibold hover:bg-blue-700 transition duration-300"
        >Enviar mensaje</button
      >
    </form>

    <!-- Toast -->
    <div
      id="toast"
      class="fixed bottom-6 right-6 text-white px-4 py-2 rounded shadow-md text-sm opacity-0 transition-opacity duration-300 pointer-events-none z-50"
    >
    </div>
  </div>
</div>

<script type="module">
  const asuntoSelector = document.getElementById("asunto-selector");
  const form = document.getElementById("contact-form");
  const nombreInput = document.getElementById("nombre");
  const emailInput = document.getElementById("email");
  const mensajeInput = document.getElementById("mensaje");
  const asuntoInput = document.getElementById("asunto");
  const asuntoTexto = document.getElementById("asunto-texto");

  // ✅ Paso 1 → Mostrar formulario al seleccionar un asunto
  document.querySelectorAll(".asunto-btn").forEach((btn) => {
    btn.addEventListener("click", () => {
      const asuntoSeleccionado = btn.getAttribute("data-asunto");
      asuntoInput.value = asuntoSeleccionado;
      asuntoTexto.textContent = `Estás contactando por: ${asuntoSeleccionado}`;
      asuntoSelector.classList.add("hidden");
      form.classList.remove("hidden");
      document.getElementById("intro-text")?.classList.add("hidden"); // ✅ Paso 2: oculta el texto inicial
    });
  });

  // ✅ Paso 2 → Enviar mensaje con asunto
  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const res = await fetch("http://localhost:8000/api/auth/contact/", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        asunto: asuntoInput.value,
        nombre: nombreInput.value,
        email: emailInput.value,
        mensaje: mensajeInput.value,
      }),
    });

    if (res.ok) {
      showToast("Mensaje enviado correctamente", "success");
      nombreInput.value = "";
      emailInput.value = "";
      mensajeInput.value = "";
      form.classList.add("hidden");
      asuntoSelector.classList.remove("hidden");
    } else {
      showToast("No se pudo enviar el mensaje", "error");
    }
  });

  function showToast(message = "Acción completada", type = "success") {
    const toast = document.getElementById("toast");
    const colorClasses = {
      success: "bg-green-600",
      error: "bg-red-600",
      info: "bg-blue-600",
      warning: "bg-yellow-500 text-black",
    };

    toast.className =
      "fixed bottom-6 right-6 text-white px-4 py-2 rounded shadow-md text-sm opacity-0 transition-opacity duration-300 pointer-events-none z-50";
    toast.classList.add(colorClasses[type] || colorClasses.success);
    toast.textContent = message;
    toast.classList.remove("opacity-0");
    toast.classList.add("opacity-100");

    setTimeout(() => {
      toast.classList.add("opacity-0");
      toast.classList.remove("opacity-100");
    }, 2500);
  }
</script>
