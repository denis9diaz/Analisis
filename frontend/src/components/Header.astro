<header
  class="bg-blue-600/90 text-white backdrop-blur-md p-4 shadow-lg sticky top-0 z-50"
>
  <div class="container mx-auto flex items-center relative">
    <a href="/" class="text-xl font-bold">Logo</a>
    <nav class="flex-1 flex justify-center" id="center-nav"></nav>
    <nav class="flex items-center gap-4" id="header-nav"></nav>
  </div>
</header>

<script type="module">
  const centerNav = document.getElementById("center-nav");
  const rightNav = document.getElementById("header-nav");
  const username = localStorage.getItem("username");

  if (username) {
    centerNav.innerHTML = `
      <a href="/analisis" class="px-4 py-2 bg-white/20 hover:bg-white/30 text-white font-semibold rounded-lg transition">
        Análisis
      </a>
    `;

    rightNav.innerHTML = `
      <div class="relative inline-block text-left">
        <button id="user-menu-button" class="font-medium cursor-pointer transition-transform hover:scale-105">
          ${username}
        </button>
        <div id="user-dropdown" class="hidden absolute right-0 mt-2 w-28 bg-white text-black rounded-md shadow-lg z-10 transition duration-200">
          <button id="logout-button" class="block w-full text-left px-4 py-2 hover:bg-gray-100">Logout</button>
        </div>
      </div>
    `;

    const userButton = document.getElementById("user-menu-button");
    const dropdown = document.getElementById("user-dropdown");
    const logoutBtn = document.getElementById("logout-button");

    userButton.addEventListener("click", () => {
      dropdown.classList.toggle("hidden");
    });

    logoutBtn.addEventListener("click", () => {
      localStorage.removeItem("access_token");
      localStorage.removeItem("refresh_token");
      localStorage.removeItem("username");
      window.location.href = "/";
    });

    document.addEventListener("click", (e) => {
      if (!rightNav.contains(e.target)) {
        dropdown.classList.add("hidden");
      }
    });
  } else {
    centerNav.innerHTML = ``;
    rightNav.innerHTML = `
      <a href="/login" class="bg-white/20 hover:bg-white/30 text-white font-semibold px-4 py-2 rounded-lg transition">
        Iniciar sesión
      </a>
      <a href="/register" class="text-white font-medium">
        Registrarse
      </a>
    `;
  }
</script>
