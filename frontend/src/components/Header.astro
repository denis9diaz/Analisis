<header class="bg-blue-600 text-white p-4 shadow-md relative">
  <div class="container mx-auto flex justify-between items-center">
    <a href="/"><h1 class="text-xl font-bold">Logo</h1></a>
    <nav class="space-x-4 ml-auto relative" id="header-nav">
      <!-- Se rellena por JS -->
    </nav>
  </div>
</header>

<script type="module">
  const nav = document.getElementById("header-nav");
  const username = localStorage.getItem("username");

  if (username) {
    nav.innerHTML = `
      <a href="/analisis" class="hover:underline">An√°lisis</a>
      <div class="relative inline-block text-left">
        <button id="user-menu-button" class="hover:underline">
          ${username}
        </button>
        <div id="user-dropdown" class="hidden absolute right-0 mt-2 w-28 bg-white text-black rounded-md shadow-lg z-10">
          <button id="logout-button" class="block w-full text-left px-4 py-2 hover:bg-gray-100">Logout</button>
        </div>
      </div>
    `;

    const userButton = document.getElementById("user-menu-button");
    const dropdown = document.getElementById("user-dropdown");
    const logoutBtn = document.getElementById("logout-button");

    userButton.addEventListener("click", () => {
      dropdown.classList.toggle("hidden");
    });

    logoutBtn.addEventListener("click", () => {
      localStorage.removeItem("access_token");
      localStorage.removeItem("refresh_token");
      localStorage.removeItem("username");
      window.location.href = "/";
    });

    document.addEventListener("click", (e) => {
      if (!nav.contains(e.target)) {
        dropdown.classList.add("hidden");
      }
    });
  } else {
    nav.innerHTML = `
      <a href="/login" class="hover:underline">Login</a>
      <a href="/register" class="hover:underline">Register</a>
    `;
  }
</script>
